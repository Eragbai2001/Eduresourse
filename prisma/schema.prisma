generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}



model Resource {
  id          String   @id @default(uuid())
  userId      String
  department  String
  level       String
  title       String
  description String
  features    String[]
  files       String[]
  coverPhoto    String?
  coverColor   String?
  resourceCount Int      @default(0) 
  downloadCount Int      @default(0) 
  viewCount     Int      @default(0) 
  createdAt   DateTime @default(now())

  @@schema("public")
}