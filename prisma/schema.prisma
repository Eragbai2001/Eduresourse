generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public", "auth"]
}

// Reference to Supabase's auth.users table
model AuthUser {
  id         String    @id
  email      String?
  profiles   Profile[]

  @@map("users")
  @@schema("auth")
}

model Profile {
  id           String    @id @default(uuid())
  user_id      String
  username     String?
  full_name    String?
  avatar_url   String?
  display_name String?
  email        String?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  auth_user    AuthUser  @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("profiles")
  @@schema("public")
}